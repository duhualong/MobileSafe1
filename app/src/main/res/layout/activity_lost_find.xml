<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<TextView
    android:id="@+id/textView1"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:textColor="#000000"
    android:textSize="22sp"
    android:gravity="center"
    android:background="#8866ff"
    android:text="手机防盗"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#40000000">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="安全号码"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_safenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="1234"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#88000000">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#40000000">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="防盗保护是否开启"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/iv_protecting"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/unlock"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#88000000">
    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_selector"
        android:textColor="#000000"
        android:textSize="20sp"
        android:onClick="reEntrySetup"
        android:clickable="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="重新进入设置向导"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#88000000">
    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#40000000"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="功能简介"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_content_style"
        android:text="GPS追踪：#*location*#"
        android:drawableLeft="@android:drawable/star_big_on"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_content_style"
        android:text="播放报警音乐：#*alarm*#"
        android:drawableLeft="@android:drawable/star_big_on"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_content_style"
        android:text="远程删除数据:#*wipedata*#"
        android:drawableLeft="@android:drawable/star_big_on"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_content_style"
        android:text="远程锁屏:#*lockscreen*#"
        android:drawableLeft="@android:drawable/star_big_on"/>
</LinearLayout>