<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/com.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<TextView
    android:id="@+id/textView1"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:textColor="#000000"
    android:textSize="22sp"
    android:gravity="center"
    android:background="#8866ff"
    android:text="@string/setting_center"/>
   <com.mobilesafe.ui.SettingItemView
       itheima:title="设置自动更新"
       itheima:desc_on="设置自动更新已经开启"
       itheima:desc_off="设置自动更新已经关闭"
       android:id="@+id/siv_update"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
   </com.mobilesafe.ui.SettingItemView>
    <com.mobilesafe.ui.SettingItemView
        itheima:title="电话归属地显示设置"
        itheima:desc_on="归属地显示已经开启"
        itheima:desc_off="归属地显示已经关闭"
        android:id="@+id/siv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.mobilesafe.ui.SettingItemView>
    <com.mobilesafe.ui.SettingClickView
        android:id="@+id/scv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.mobilesafe.ui.SettingClickView>
    <com.mobilesafe.ui.SettingClickView
        android:id="@+id/scv_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.mobilesafe.ui.SettingClickView>
    <com.mobilesafe.ui.SettingItemView
        itheima:title="黑名单更新设置"
        itheima:desc_on="黑名单更新已经开启"
        itheima:desc_off="黑名单更新已经关闭"
        android:id="@+id/siv_callsafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.mobilesafe.ui.SettingItemView>
</LinearLayout>